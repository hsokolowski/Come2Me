<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient2"
    tools:context=".DeleteFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/find"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/find"
            android:layout_marginTop="@dimen/pading24"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_find"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:layout_marginTop="@dimen/margin100"
        android:background="@drawable/mybuttons"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/redcycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="@dimen/margin200"
        tools:itemCount="3"></android.support.v7.widget.RecyclerView>

    <Button

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1000dp"
        android:layout_marginBottom="0dp" />
</FrameLayout>