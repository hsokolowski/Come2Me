<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selectors"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingLeft="7dp"
    android:paddingTop="@dimen/pading10"
    android:paddingRight="7dp"
    android:paddingBottom="@dimen/pading10">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="87dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:elevation="8dp"
        app:cardElevation="10dp"
        android:background="@color/card"
        app:cardPreventCornerOverlap="false"
        tools:ignore="ExtraText">

        <ImageView
            android:id="@+id/img"
            android:layout_width="117dp"
            android:layout_height="match_parent"
            android:background="@drawable/tlo1"
            android:scaleType="centerInside" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/img">

            <TextView
                android:id="@+id/first_name"
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="0dp"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/last_name"
                android:layout_width="198dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_name"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/adres"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_name"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:textSize="@dimen/textsize14" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="28dp"
                android:layout_height="29dp"
                android:layout_alignBottom="@+id/last_name"
                android:layout_alignParentStart="true"
                android:layout_marginStart="119dp"
                android:layout_marginEnd="-23dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="-31dp"
                app:srcCompat="@drawable/ic_location_on_black_24dp"
                tools:ignore="VectorDrawableCompat" />

            <!--android:layout_alignBottom="@+id/null"-->


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>